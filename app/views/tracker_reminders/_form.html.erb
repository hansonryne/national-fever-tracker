<%= form_with(model: tracker_reminder) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :email, class: "text-lg normal-case" %>
    <%= form.email_field :email, placeholder: 'fuchi@wh.gov', class: "text-2xl form-control" %>
  </div>

  <%= form.label :time_to_send, value: "Time to send", class: "text-lg normal-case" %>
  <div class="form-group flex flex-wrap items-center justify-start w-full mb-0">
    <div class="flex w-full lg:w-1/3 mb-4">
      <div class="radio-button w-full mx-2">
        <%= form.radio_button :time_to_send, 'morning', class: 'radio-button__input', checked: true, data: { target: 'temperature.temperatureNormal', action: "change->temperature#temperatureButtonChanged" } %>
        <%= form.label :time_to_send, :value => 'morning', class: "w-full radio-button__label text-center" do %>
          <p class="mb-0 font-bold mb-2 text-md">6:00am-12:00pm</p>
          <p class="mb-0 normal-case handwriting text-xl">Morning</p>
        <% end %>
      </div>

    </div>
    <div class="flex  w-full lg:w-1/3 mb-4">
      <div class="radio-button w-full mx-2">
        <%= form.radio_button :time_to_send, 'afternoon', class: 'radio-button__input', data: { target: 'temperature.temperatureFever', action: "change->temperature#temperatureButtonChanged" } %>
        <%= form.label :time_to_send, :value => 'afternoon', class: "radio-button__label text-center" do %>
          <p class="mb-0 font-bold mb-2 text-md">12:00pm-5:00pm</p>
          <p class="mb-0 normal-case handwriting text-xl">Afternoon</p>
        <% end %>
      </div>
    </div>
    <div class="flex  w-full lg:w-1/3 mb-4">
      <div class="radio-button w-full mx-2">
        <%= form.radio_button :time_to_send, 'evening', class: 'radio-button__input', data: { target: 'temperature.temperatureHigh', action: "change->temperature#temperatureButtonChanged" } %>
        <%= form.label :time_to_send, :value => 'evening', class: "radio-button__label text-center" do %>
          <p class="mb-0 font-bold mb-2 text-md">5:00pm-10:00pm</p>
          <p class="mb-0 normal-case handwriting text-xl">Evening</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="border border-gray-400 rounded px-4 py-2 my-4">
    <label class="text-lg label  normal-case">Optional Age and Zipcode</label>
    <p class="mb-4">We will store your age and zip and use it to autofill your future temperature checks from your reminder emails.</p>

    <div class="form-group flex flex-wrap items-center justify-start">
      <label for="zip" class="text-lg  normal-case">Zipcode</label>
      <%= form.text_field :loc_zip, class: "form-control", pattern: "[0-9]*"  %>
    </div>
    <label for="age" class="text-lg label lg:pr-4 lg:mt-2 normal-case">Age</label>
    <div class="form-group flex flex-wrap items-center justify-start">
      <div class="flex w-full">
        <div class="radio-button w-1/3">
          <%= form.radio_button :age, 'age_18_to_29', class: 'radio-button__input' %>
          <%= form.label :age, :value => 'age_18_to_29', class: "mx-2 radio-button__label text-center" do %>
            <p class="mb-0 text-lg normal-case handwriting">18 - 29</p>
          <% end %>
        </div>
        <div class="radio-button w-1/3">
          <%= form.radio_button :age, 'age_30_to_39', class: 'radio-button__input' %>
          <%= form.label :age, :value => 'age_30_to_39', class: "mx-2 radio-button__label text-center" do %>
            <p class="mb-0 text-lg normal-case handwriting">30 - 39</p>
          <% end %>
        </div>
        <div class="radio-button w-1/3">
          <%= form.radio_button :age, 'age_40_to_49', class: 'radio-button__input' %>
          <%= form.label :age, :value => 'age_40_to_49', class: "mx-2 radio-button__label text-center" do %>
            <p class="mb-0 text-lg normal-case handwriting">40 - 49</p>
          <% end %>
        </div>
      </div>
      <div class="flex w-full">
        <div class="radio-button w-1/3">
          <%= form.radio_button :age, 'age_50_to_59', class: 'radio-button__input' %>
          <%= form.label :age, :value => 'age_50_to_59', class: "mx-2 radio-button__label text-center" do %>
            <p class="mb-0 text-lg normal-case handwriting">50 - 59</p>
          <% end %>
        </div>
        <div class="radio-button w-1/3">
          <%= form.radio_button :age, 'age_60_to_69', class: 'radio-button__input' %>
          <%= form.label :age, :value => 'age_60_to_69', class: "mx-2 radio-button__label text-center" do %>
            <p class="mb-0 text-lg normal-case handwriting">60 - 69</p>
          <% end %>
        </div>
        <div class="radio-button w-1/3">
          <%= form.radio_button :age, 'age_70_plus', class: 'radio-button__input' %>
          <%= form.label :age, :value => 'age_70_plus', class: "mx-2 radio-button__label text-center" do %>
            <p class="mb-0 text-lg normal-case handwriting">70+</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group flex justify-between block mt-6">
    <%= form.button class: "text-xl h-16 btn btn-primary block w-full text-center" %>
  </div>
<% end %>
